<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.dreamon.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90CAF9"
    >

    <ImageView
        android:layout_marginTop="2dp"
        android:src="@drawable/logodreamon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:background="@android:color/white"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="1.47"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:text="@string/company_descr"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.47"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:text="Address 1 : Ilioupoli, 16343 Athens"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.47"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:text="Address 2 : Akrotiri, 84700 Santorini"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.47"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:text="Phone: +30 6945 100 474"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-medium"
        android:layout_weight="1.47"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"
        android:text="Email: yourdream@dreamonphotography.gr"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>


</LinearLayout>
    </RelativeLayout>
</ScrollView>

