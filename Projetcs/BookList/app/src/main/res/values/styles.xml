<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_1">
        <item name="android:layout_width">@dimen/dp36</item>
        <item name="android:layout_height">@dimen/dp36</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/ratingColor</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">@dimen/sp16</item>
    </style>

    <style name="style_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/dp16</item>
        <item name="android:paddingLeft">@dimen/dp16</item>
        <item name="android:paddingRight">@dimen/dp16</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/dp16</item>
        <item name="android:paddingTop">@dimen/dp16</item>
    </style>

    <style name="style_item_textInfo">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/dp16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="authors_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="price_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/dp16</item>
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="basic_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="listView_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/explanation</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="style_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="style_headers_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/search_bar</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/dp8</item>
        <item name="android:paddingTop">@dimen/dp8</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="style_search_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp8</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/dp8</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="style_search_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:layout_weight">0.09</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="style_editSearch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
