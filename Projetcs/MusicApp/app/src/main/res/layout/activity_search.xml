<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/mainSearch"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/main_background"
tools:context="com.example.android.musicapp.SearchActivity">


<EditText
    android:id="@+id/search_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="17dp"
    android:hint="Search title"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />


<Button
    android:id="@+id/top10_europe"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:text="Top 10 Europe"
    android:layout_marginLeft="11dp"
    android:layout_alignTop="@+id/top10_country"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="11dp" />

<Button
    android:id="@+id/top10_country"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:text="Top 10 Country"
    android:layout_marginRight="14dp"
    android:layout_marginTop="29dp"
    android:layout_below="@+id/search_bar"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="14dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:text="@string/search_bar_descr"
    android:textSize="17sp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true" />

</RelativeLayout>
