<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/main_background"
tools:context="com.example.android.musicapp.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search"
        style="@style/CategoryStyle"
        android:background="@color/category_search"
        android:text="@string/category_search"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/search_description"
        style="@style/CategoryStyle2"
        android:background="@color/category_search"
        android:text="@string/search_your_favorite_artist_album_song"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/radio"
        style="@style/CategoryStyle"
        android:background="@color/category_radio"
        android:text="@string/category_radio"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/radio_description"
        style="@style/CategoryStyle2"
        android:background="@color/category_radio"
        android:text="Listen live your favorite radio station!!!"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/store"
        style="@style/CategoryStyle"
        android:background="@color/category_store"
        android:text="@string/category_store"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/store_description"
        style="@style/CategoryStyle2"
        android:background="@color/category_store"
        android:text="Store your favorite songs on to your phone!!"
        android:textAlignment="center" />


</LinearLayout>

</ScrollView>


